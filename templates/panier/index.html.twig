<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>

		{# Run `composer require symfony/webpack-encore-bundle`
		           and uncomment the following Encore helpers to start using Symfony UX #}
		{% block stylesheets %}
			{#{{ encore_entry_link_tags('app') }}#}
		{% endblock %}
		<link rel="stylesheet" href="/assets/css/bootstrap.min.css"/>

		{% block javascripts %}
			{#{{ encore_entry_script_tags('app') }}#}
		{% endblock %}
	</head>
	<body>
		<header>
			<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
				<div class="container-fluid">
					<a class="navbar-brand" href="/">NomBlog</a>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>

					<div class="collapse navbar-collapse" id="navbarColor01">
						<ul class="navbar-nav me-auto">
							<li class="nav-item">
								<a class="nav-link active" href="home">Home
									<span class="visually-hidden">(current)</span>
								</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="#">Features</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="/panier">Panier</a>
							</li>

							<li class="nav-item">
								<a class="nav-link" href="#">Pricing</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="#">About</a>
							</li>
							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Dropdown</a>
								<div class="dropdown-menu">
									<a class="dropdown-item" href="#">Action</a>
									<a class="dropdown-item" href="#">Another action</a>
									<a class="dropdown-item" href="#">Something else here</a>
									<div class="dropdown-divider"></div>
									<a class="dropdown-item" href="#">Separated link</a>
								</div>
							</li>
						</ul>
						<form class="d-flex" data-children-count="1">
							<input class="form-control me-sm-2" type="text" placeholder="Search">
							<button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
						</form>
					</div>
				</div>
			</nav>
		</header>

		<div class="container"> {% block body %}
			</div>

    {% if items | length > 0 %}
    <table class="table">
        <thead>
             <tr>
                     <th>Produit</th>
                     <th>Prix</th>
                     <th>Quantit√©</th>
                     <th>Total</th>
                     <th></th>
        </thead>
         <tbody>
            {% for item in items %}

            <td>{{item.article.title}}</td>
            <td>{{item.article.prix}}</td>
            <td>{{item.quantity}}</td>
            <td>{{item.article.prix * item.quantity}}</td>
            <td> 
                    <a href="{{ path('cart_remove', {'id' : item.article.id})}}" class="btn btn-danger btn-sm">
                    <i class="fas fa-trash"></i>


            </td>
            {% endfor %}
         </tbody>
         <tfoot> 
            <tr>
                <td colspan="3">Total : </td>
                <td></td>
                <td>{{ total }}</td>
                </tr>
                </tfoot>

     </table>
            {% else %}
            <p> C'est vide </p>
            {% endif %}
            

{% endblock %}
		</body>
	</html>

